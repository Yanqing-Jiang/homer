# H.O.M.E.R Configuration

# Required: Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Required: Your Telegram Chat ID (numeric)
ALLOWED_CHAT_ID=your_chat_id_here

# Optional: Session timeout in hours (default: 4)
SESSION_TTL_HOURS=4

# Optional: Log level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info

# Optional: Default weather location for Gemini queries
WEATHER_LOCATION=Bellevue,WA

# Optional: Web dashboard settings
WEB_ENABLED=true
WEB_PORT=3000

# Optional: TUI refresh rate in milliseconds
TUI_REFRESH_MS=1000
